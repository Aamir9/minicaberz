@model thechauffeurteam.Models.FixPrice
@using thechauffeurteam.Models
@{
    ViewBag.Title = "PriceTable";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    List<PostCode> PostCodeVal = ViewBag.PostCode;

}



<!-- Header -->
<div class="header bg-gradient-primary pb-8 pt-5 pt-md-8">
    <div class="container-fluid">
        <div class="header-body">

        </div>
    </div>
</div>
<!-- Editable table -->

<div class="container-fluid mt--7">
    <div class="row mt-5">
        <div class="col-xl-12 mb-5 mb-xl-0">
            <div class="card shadow">
                <div class="card-header border-0">
                    <div class="row align-items-center">
                        <div class="col">
                            <h3 class="mb-0">Fix Price Value</h3>

                            
                        </div>
                        <div class="col text-right">
                            @*<a href="#!" class="btn btn-sm btn-primary">See all</a>*@
                            <a href="~/Price/FixPrices" class="btn btn-sm btn-primary">Back</a>
                        </div>
                    </div>
                </div>

                <div class="card-body thead-light">

 
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="row justify-content-center">


                            <div class="col-md-9">

                                <div class="row">
                                    <div class="col-md-6">

                                        <div class="form-group">
                                            <input type="text" name="PickUp" class="form-control" id="searchTextField" value="" placeholder="enter ther pick up address" />

                                        </div>

                                    </div>
                                    <div class="col-md-6">

                                        <div class="form-group">

                                            <div class="col-sm-12">
                                                <input type="text" name="DropOff" id="searchTextField2" class="form-control" value="" placeholder="enter ther Drop Off address" />
                                            </div>
                                        </div>

                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col-md-4">

                                        <div class="form-group">

                                            @Html.EditorFor(model => model.Eclass, new { htmlAttributes = new { @class = "form-control", placeholder = "Saloon Price" } })
                                            @Html.ValidationMessageFor(model => model.Eclass, "", new { @class = "text-danger" })

                                        </div>

                                    </div>

                                    <div class="col-md-4">
                                        <div class="form-group">


                                            @Html.EditorFor(model => model.Sclass, new { htmlAttributes = new { @class = "form-control", placeholder = "Estate Price" } })
                                            @Html.ValidationMessageFor(model => model.Sclass, "", new { @class = "text-danger" })

                                        </div>

                                    </div>
                                    <div class="col-md-4">

                                        <div class="form-group">


                                            @Html.EditorFor(model => model.Vclass, new { htmlAttributes = new { @class = "form-control", placeholder = "MPV Price" } })
                                            @Html.ValidationMessageFor(model => model.Vclass, "", new { @class = "text-danger" })

                                        </div>

                                    </div>


                                </div>

                            </div>

                        </div>
                        <br>
                        <div class="row justify-content-center">
                            <button class="col-md-1 btn btn-primary" type="submit"> SAVE</button>
                        </div>
                        <br>
                        <br>
                        <br>
                    }
                </div>
            </div>
        </div>

    </div>
    <!-- Footer -->
    <footer class="footer">
        <div class="row align-items-center justify-content-xl-between">
            <div class="col-xl-12">
                <div class="copyright text-center text-xl-left text-muted">
                    &copy; 2018 itLogi Solutions
                </div>
            </div>

        </div>
    </footer>
</div>


@section scripts{

    <script defer src="https://maps.googleapis.com/maps/api/js?libraries=places&language=en&callback=initMap&key=AIzaSyAUeFGwxXtr8M8SD82BbA-6857CVPKUhNo" type="text/javascript"></script>
    <script>
        function initMap() {

            var input = document.getElementById('searchTextField');

            autocomplete = new google.maps.places.Autocomplete(input);

            var input2 = document.getElementById('searchTextField2');

            autocomplete = new google.maps.places.Autocomplete(input2);

         }
    </script>

}